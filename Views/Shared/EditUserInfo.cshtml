@model User

    <div class="user-info">
        <form asp-action="UpdateUserInfo" method="post" class="form-horizontal" role="form">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="user-info">@Model.Email</div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="user-info">@Model.FirstName></div>
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="@Model.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="user-info">@Model.LastName></div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="user-info">@Model.PhoneNumber></div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="col-md-2 control-label"></label>
                <div class="col-md-5">
                    <input asp-for="@Model.PhoneNumber" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-5">
                    <input type="submit" class="btn btn-primary" value="Submit" />
                </div>
            </div>

        </form>
</div>
